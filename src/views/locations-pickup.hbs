<link href="../../bootstrap-3.3.7/docs/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="../../bootstrap-3.3.7/docs/assets/css/ie10-viewport-bug-workaround.css" rel="stylesheet">
<link href="../../bootstrap-3.3.7/docs/examples/justified-nav/justified-nav.css" rel="stylesheet">
<script src="../../bootstrap-3.3.7/docs/assets/js/ie-emulation-modes-warning.js"></script>

<div class="container">
    <div class="masthead">
      <h3 class="page-header" style="text-align: center; font-size: 45px;">Walk for Meals</h3>
      <nav>
        <ul class="nav nav-justified">
          <li><a href="/">Home</a></li>
          <li><a href="../../user/signIn">User Login/Sign Up</a></li>
          <li><a href="../../aboutUs">About Us</a></li>
          <li><a href="../../restaurant/signIn"">Restaurant Login/Sign Up</a></li>
          <li><a href="../../users/location">User's Contributions</a></li>
        </ul>
      </nav>
    </div>

    {{#if error}}
      <h3>{{ error }}</h3>
    {{/if}}
    
    <table align="center" border="4" style="align-content: left;">
      <thead>
        <th style="align-content:center;">Username</th>
        <th style="align-content:center;">Location</th>
        <th style="align-content:center;">Comments</th>
        <th style="align-content:center;">Restaurant Name (if picked for delivery)</th>
      </thead>
      <tbody> 
        {{#each locations}}            
          <tr>    
              <td>{{ userName }}</td>

              <td>{{ location }}</td>

              <td>{{ comments }}</td>

              <td>{{ restaurantName }}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <form name="addLocation" class="form-signin" action="../../restaurants/pickLocation" method="POST">
      <h2 class="form-signin-heading">Restaurants; deliver food maybe?</h2>
      <label for="userName" class="sr-only" >Location</label>
      <input type="text" class="form-control" id="location" name="location" placeholder="Location" required autofocus>
      <button class="btn btn-lg btn-primary btn-block" type="submit" id="pickLocation">Submit</button>
    </form>

    <footer class="footer">
        <p>&copy; Walk for Meals, Inc.</p>
    </footer>
</div>